{% extends 'SoftuniBlogBundle::base.html.twig' %}

{% block body %}
    <h1>Posts list</h1>

    <table class="table table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Author</th>
                <th>Categories</th>
                <th>Createdat</th>
                <th>Updatedat</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td><a href="{{ path('post_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
                <td>{{ post.title }}</td>
                <td>{{ post.description }}</td>
                <td>{{ post.author }}</td>
                <td>
                    {% for category in post.categories %}
                    {{ category }} <br>
                    {% endfor %}
                </td>
                <td>{% if post.createdAt %}{{ post.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if post.updatedAt %}{{ post.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li class="btn list-group-item-info">
                            <a href="{{ path('post_show', { 'id': post.id }) }}">show</a>
                        </li>
                        <li class="btn list-group-item-warning">
                            <a href="{{ path('post_edit', { 'id': post.id }) }}">edit</a>
                        </li>
                        {#<li class="btn btn-danger">#}
                            {#{{ form_start(delete_form) }}#}
                            {#<input type="submit" value="Delete">#}
                            {#{{ form_end(delete_form) }}#}
                        {#</li>#}
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li class="btn list-group-item-success">
            <a href="{{ path('post_new') }}">Create a new post</a>
        </li>
    </ul>
{% endblock %}
